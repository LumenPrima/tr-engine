{
  "name": "tr-engine",
  "version": "1.0.0",
  "description": "A real-time trunk radio monitoring and analysis server",
  "main": "src/app.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node src/app.js",
    "start:prod": "NODE_ENV=production node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:debug": "nodemon --inspect src/app.js",
    "db:init": "npm run setup-db && npm run generate-indexes",
    "db:setup": "node scripts/setup-db.js",
    "db:indexes": "node scripts/generate-indexes.js",
    "db:clean": "node scripts/setup-db.js --clean",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint src/ scripts/ tests/",
    "lint:fix": "eslint --fix src/ scripts/ tests/",
    "format": "prettier --write \"src/**/*.js\" \"scripts/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"scripts/**/*.js\" \"tests/**/*.js\"",
    "clean": "rm -rf coverage/ .nyc_output/ dist/",
    "prepare": "npm run db:init && npm run lint && npm run format",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "radio",
    "monitoring",
    "mqtt",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "gridfs-stream": "^1.1.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "mongoose": "^8.9.5",
    "mqtt": "^5.10.3",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "eslint": "^9.19.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "mongodb-memory-server": "^10.1.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^6.3.4"
  }
}
